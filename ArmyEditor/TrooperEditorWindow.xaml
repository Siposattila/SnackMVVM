<Window x:Class="SnackMVVM.TrooperEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyEditor"
        xmlns:vms="clr-namespace:ArmyEditor.ViewModels"
        mc:Ignorable="d"
        Title="TrooperEditor" Height="250" Width="150">
    
<StackPanel  x:Name="stack" Orientation="Vertical">
        <Label Padding="10" Background="LightBlue" Content="Power:"/>
        <TextBox Padding="10" Text="{Binding Selected.Power, UpdateSourceTrigger=Explicit}"/>
        <Label Padding="10" Background="LightBlue" Content="Speed:"/>
        <TextBox Padding="10" Text="{Binding Selected.Speed, UpdateSourceTrigger=Explicit}"/>
        <Button Content="Save" Click="Button_Click"/>
    </StackPanel>
</Window>
